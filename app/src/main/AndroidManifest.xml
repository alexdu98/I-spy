<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.um.asn.i_spy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.LOCATION_HARDWARE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ChooseModeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterOrSignInMasterActivity"
            android:label="@string/register_or_connect_activity_label"/>

        <activity
            android:name=".RegisterSlaveActivity"
            android:label="@string/register_slave_activity_label" />

        <activity
            android:name=".RegisterMasterActivity"
            android:label="@string/register_master_activity_label" />

        <activity
            android:name=".ListSlavesActivity"
            android:label="@string/title_activity_list_slaves"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".SignInMasterActivity"
            android:label="@string/user_login_activity_label"/>

        <service
            android:name=".SlaveService"
            android:enabled="true"
            android:exported="true"></service>

        <receiver
            android:enabled="true"
            android:name=".BootReceiver"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="YouWillNeverKillMe" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>