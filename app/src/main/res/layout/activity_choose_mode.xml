<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.um.asn.i_spy.ChooseModeActivity">

    <Button
        android:id="@+id/slave_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/slave"
        android:layout_above="@+id/master_mode_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/master_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/master"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/slave_mode_button"
        android:layout_marginBottom="217dp" />

</RelativeLayout>
